using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StringWords
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter your string.");
            string s = Console.ReadLine();                      
            string[] arr = s.Split(new[] { ' ' });
            Console.WriteLine();
            Console.WriteLine("The number of words in the given string is: "+arr.Length);            
            Console.ReadKey();
        }
    }
}
